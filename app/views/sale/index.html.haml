.row-fluid
  .span9
    #myCarousel.carousel
      .carousel-inner
        -@products.each do |product|
          .slide
            .item
              .ph
                - if image = product.images.first
                  = link_to(product_path(product.id)) do
                    = image_tag image.file.url(:large)
                    .over
                    .info
                      %h1 Summer collection
                      .btn-group 
                        %p.btn en todas las compras que superen los $1000  
  .span3
    -@products.each do |product| 
      .item-content
        %h5 #{product.name} 
        %p Sale price! #{product.sale_price}
.row-fluid
  .span12
    .control-nav.control-carousel
      %a.control.active
      %a.control
      %a.control
.row-fluid
.span12
  .products.news
    .carousel-inner
      -@products.reverse.each do |product|
        .span4
          .item
            = render 'shared/product_link', product: product