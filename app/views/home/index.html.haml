.row-fluid.fondo
  .span9.full
    %ul#mainslider.bxslider
      -@designers.last(3).each do |designer|
        %li.item
          .ph
            - if image = designer.images.first
              = link_to(designer_path(designer.id)) do
                = image_tag image.file.url(:large)
                .over
                .info
                  %h1 #{designer.name} 
                  .btn-group.swift
                    %button.btn  
                      %p Ver Colecci칩n
  .span3.full#bx-pager
    -@designers.last(3).each do |designers| 
      %a.item-content{ :href => "#",:data => {'slide-index' => '0'} }
        %h5 #{designers.name}
        %p #{designers.bio.truncate(180)}

.row-fluid
  .boxtitle.first
    %h5 Nuevas Campa침as
  .row-fluid
    .slider_campaigns
      -(@products.last(4)*4).each do |product|
        .span3
          .item
            = render 'shared/product_link', product: product

.row-fluid
  .boxtitle.first
    %h5 Novedades
  .row-fluid
    .slider_products
      -(@products.last(15)*4).each do |product|
        .span3{:class => "#{product.category}"}
          .item
            = render 'shared/product_link', product: product
            %h5 #{product.category}

.row-fluid.topdesigners
  .span3
    %ul.title
      %li
        %h4 top 5 dise침adores
    %ul.top-designers
      -@designers.last(5).each do |designer|
        %li
          = link_to(designer.name, designer_path(designer), value: designer.id)
  .span6
    #myCarouselTopDesigner
      .carousel-inner
        -@designers.last(5).each do |designer|
          -if image = designer.images.first
            .slide
              .item
                = image_tag(image.file.url(:large))
  .span3.top-designers
    .boxtitle
      %h5 colecci칩n
    .boxProduct
      -@designers.last(5).each_with_index do |designer, index|
        .row-fluid
          - designer.products.last(5).each do |product|
            .item
              .ph
                -if image = product.images.first
                  = link_to(image_tag(image.file.url(:large)), product_path(product.id))
              .control-nav