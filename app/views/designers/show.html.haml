.row-fluid
  .page#featured
    .slider--fullscreen
      .slider
        .slider-strip
          - @designer.images.each do |image|
            .slider-item{:style => "background-image: url(#{image.file.url(:large)})"} 
              .container
                .slider-info
                  %h1.checkcolor #{@designer.name}
        .slider-arrow.slider-arrow--left &#8249
        .slider-arrow.slider-arrow--right &#8250
        .slider-dots
.row-fluid
  .box.page#bio
    %h5 About
    .hr
    %p #{@designer.bio}    
.row-fluid
  .box.page#products
    .row-fluid
      %h5 Productos
    .row-fluid
      .hr
    .row-fluid
      %ul#filter
        %li.filter{ :data => { :filter => "cat1" }}
          %a.btn.info{ :href => "#" } Ropa 
        %li.filter{ :data => { :filter => "cat1" }}
          %a.btn.info{ :href => "#" } Zapatos 
        %li.filter{ :data => { :filter => "cat1" }}
          %a.btn.info{ :href => "#" } Accesorios 
.row-fluid.collections
  -(@designer.products.last(12)*6).each do |product|
    .span3{:class => "#{product.category}"}
      .item
        = render 'shared/product_link', product: product
